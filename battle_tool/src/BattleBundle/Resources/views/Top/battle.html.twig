{% extends 'BattleBundle:Top:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href={{ asset("bundles/battle/css/battle.css") }} rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        {% set str = ['自分','相手'] %}
        {% for name in str %}
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{name}}のパーティー
                </div>
                <div class="panel-body">
                    {% for i in 0..2 %}
                        <div class="row">
                            <div class="col-lg-6">
                                <input type=”text” class="form-control">
                            </div>
                            <div class="col-lg-6">
                                <input type=”text” class="form-control">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <a class="btn btn-default" href="#" role="button">対戦へ</a>
{% endblock %}
