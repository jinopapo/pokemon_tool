{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href={{ asset("css/party/new.css") }} rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <ul class="nav nav-tabs">
        {% for i in 0..5 %}
            {% set tab_status= ""  %}
            {% if i == 0 %}
                {% set tab_status= "active" %}
            {% endif %}
            <li class={{ tab_status }}>
                <a href="#tab{{i}}" data-toggle="tab">{{i+1}}体目</a>
            </li>
        {% endfor %}
    </ul>
    
    <div class="tab-content">
        {% set forms = [form1,form2,form3,form4,form5,form6] %}
        {% for i in 0..5 %}
            {% set tab_status = "" %}
            {% if i == 0 %}
                {% set tab_status = "tab-pane active" %}
            {% else %}
                {% set tab_status = "tab-pane" %}
            {% endif %}
            <div class="{{ tab_status }}" id="tab{{i}}">
                {{ form_start(forms[i]) }}
                {{ form_widget(forms[i]) }}
                {{ form_end(forms[i]) }}
                test{{i}}
            </div>
        {% endfor %}
    </div>
{% endblock %}

