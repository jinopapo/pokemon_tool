{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href={{ asset("css/battle/index.css") }} rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    自分のパーティー
                </div>
                {% if id == NULL %}
                <div class="panel-body">
                    {% for i in 0..2 %}
                        <div class="row">
                            <div class="col-lg-6">
                                <input type=”text” class="form-control">
                            </div>
                            <div class="col-lg-6">
                                <input type=”text” class="form-control">
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="panel-body">
                    {% set party=[['ガブリアス','ボーマンダ','ギャラドス','ミミッキュ','カプコケコ','ギルガルド']] %}
                    {% for i in 0..2 %}
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="poke-name">{{ party[id][i*2] }}</div>
                            </div>
                            <div class="col-lg-6">
                                <div class="poke-name">{{ party[id][i*2+1] }}</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% endif %}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    相手のパーティー
                </div>
                <div class="panel-body">
                    {% for i in 0..2 %}
                        <div class="row">
                            <div class="col-lg-6">
                                <input type=”text” class="form-control">
                            </div>
                            <div class="col-lg-6">
                                <input type=”text” class="form-control">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>
    <a class="btn btn-default battle-status" href={{ path("battle_status") }} role="button">対戦へ</a>
{% endblock %}
